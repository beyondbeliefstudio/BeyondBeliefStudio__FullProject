---
// Props (optional: you can add more if you want to customize)
---


<div id="site-selector-root" class="site-selector">
  <div id="site-selector-options" class="site-selector__options">
    <a href="/screenprinting" id="site-selector-sp" class="site-selector__btn">
      <div class="site-selector__btn-circle">
        <p>SP</p>
      </div>
      <span>Screen Printing</span>
    </a>
    <a href="/webdesign" id="site-selector-wd" class="site-selector__btn">
      <div class="site-selector__btn-circle">
        <p>WD</p>
      </div>
      <span>Web Design</span>
    </a>
  </div>
  <button id="site-selector-circle" class="site-selector__circle" aria-label="Switch site" type="button">
    <span id="site-selector-current-icon"></span>
  </button>
</div>

<style lang="scss" is:global>
.site-selector {
  position: fixed;
  right: 1.5rem;
  bottom: 1.5rem;
  z-index: 2000;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  outline: none;
  
  &__circle {
    width: 80px;
    height: 80px;
    border-radius: var(--border-radius-small);
    background: #fff;
    box-shadow: 0 4px 24px 0 rgba(0,0,0,0.10);
    border: 1px solid #eee;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: box-shadow 0.2s, background 0.2s;
    z-index: 2;
    
    &:hover, &:focus {
      box-shadow: 0 6px 32px 0 rgba(0,0,0,0.16);
      background: #f5f5f5;
      outline: none;
    }
  }
  
  &__options {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    background: #ffffff36;
    border-radius: var(--border-radius-small);
    box-shadow: 0 4px 24px 0 rgba(0,0,0,0.10);
    backdrop-filter: blur(16px);
    border: 1px solid #fff;
    margin-bottom: 0.5rem;
    opacity: 0;
    pointer-events: none;
    transform: scale(0.95);
    transition: opacity 0.2s, transform 0.2s;
    z-index: 1;
    overflow: hidden;
  }

  &__btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1rem;
    color: var(--dark-900);
    background: none;
    border: none;
    // border-radius: 1.5rem;
    padding: 0.5rem 1.2rem;
    text-decoration: none;
    transition: background 0.2s, color 0.2s, box-shadow 0.2s;
    cursor: pointer;

    &:hover, &:focus {
      // background: #f5f5f5;
      color: #111;
      outline: none;
    }

    &.active {
      // background: #f5f5f5;
      color: #111;
      font-weight: 700;
    }

    span {
      font-size: 1.25rem;
      font-family: 'Hamburg';
      font-weight: 400;
    }
  }

  &__btn-circle {
    background: var(--brand-primary);
    border-radius: 1000px;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;

    p {
      margin-bottom: 0;
      font-family: 'Hamburg';
      padding-top: 4px;
      font-size: .9rem;
    }
  }
}
.site-selector.open .site-selector__options {
  opacity: 1;
  pointer-events: auto;
  transform: scale(1);
}

@media (max-width: 600px) {
  .site-selector {
    right: 1rem;
    bottom: 1rem;
  }
  .site-selector__circle {
    width: 44px;
    height: 44px;
  }
  .site-selector__options {
    padding: 0.3rem 0.5rem;
    gap: 0.2rem;
  }
}
</style>

<script>
if (typeof window !== 'undefined') {
  const root = document.getElementById('site-selector-root');
  const circle = document.getElementById('site-selector-circle');
  const options = document.getElementById('site-selector-options');
  const icon = document.getElementById('site-selector-current-icon');
  const sp = document.getElementById('site-selector-sp');
  const wd = document.getElementById('site-selector-wd');
  let open = false;
  let current = 'screenprinting';
  if (window.location.pathname.includes('webdesign')) current = 'webdesign';
  else if (window.location.pathname.includes('screenprinting')) current = 'screenprinting';
  // Set current icon
  icon.innerHTML = current === 'screenprinting'
    ? '<div class="site-selector__btn-circle"><p>SP</p></div>'
    : '<div class="site-selector__btn-circle"><p>WD</p></div>';
  // Highlight current
  if (current === 'screenprinting') {
    sp.classList.add('active');
    wd.classList.remove('active');
  } else {
    wd.classList.add('active');
    sp.classList.remove('active');
  }
  // Toggle open/close
  circle.addEventListener('click', (e) => {
    e.stopPropagation();
    open = !open;
    if (open) root.classList.add('open');
    else root.classList.remove('open');
  });
  // Close on outside click
  window.addEventListener('click', (e) => {
    if (!root.contains(e.target)) {
      open = false;
      root.classList.remove('open');
    }
  });
}
</script>
